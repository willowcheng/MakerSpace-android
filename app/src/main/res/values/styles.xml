<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Navigation theme -->
    <style name="NavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/deep_carmine_pink</item>
        <item name="colorPrimaryDark">@color/fire_engine_red</item>
        <item name="colorAccent">@color/sky_blue</item>
        <item name="singleAccount">true</item>
        <item name="rippleBackport">true</item>
        <item name="multipaneSupport">true</item>
    </style>

    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#902DA0FF</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

</resources>
